{{#extends 'base'}}

{{#block "content"}}
<h1>Update Comment</h1>
<form method="POST">
    <div>
        <label>Comments:</label>
        <textarea class="form-control" name="content"></textarea>
    </div>
    <div>
        <input type="submit" class="btn btn-primary mt-3"/>
       <a href="/faults/{{faults._id}}/comment" class="btn btn-secondary mt-3">Cancel</a>
    </div>

</form>
{{/block}}

{{/extends}}