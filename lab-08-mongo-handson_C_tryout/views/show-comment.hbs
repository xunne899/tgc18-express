{{#extends 'base'}}

{{#block 'content'}}
<h1>{{faults.title}} <a href="/faults/{{faults._id}}/comment/add" class="btn btn-success">Add New</a>
<a href="/" class="btn btn-secondary">Back</a></h1>
{{#each faults.comments}}
<div class="card">
    <div class="card-body">
        {{this.content}}
        <div class="udc_button">
            <a href="/faults/{{../faults._id}}/comment/{{this._id}}/update" class="btn btn-primary btn-sm">Update</a>
            <a href="/faults/{{../faults._id}}/comment/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            <a href="/" class="btn btn-secondary btn-sm">Cancel</a>
        </div>
    </div>
</div>
{{/each}}
{{/block}}

{{/extends}}