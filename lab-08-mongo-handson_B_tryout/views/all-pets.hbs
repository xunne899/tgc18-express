{{#extends 'base'}}

{{#block "content"}}

{{#each pets}}


<div class="card" style="width: 18rem;">
  <div class="card-body">
    
    <h5 class="card-title">{{this.name}}</h5>
    <ul>
        <li>ID:{{this._id}}</li>
        <li>Age: {{this.age}}</li>
        <li>Breed: {{this.breed}}</li>
        <li>Problems: {{this.problems}}</li>
        <li>HDB Approved: {{this.hdb_approved}}</li>
        <li>Tags: {{this.tags}}</li>
    </ul>
    <a href="/{{this._id}}/edit" class="btn btn-primary">Edit</a>
    <a href="/create" class="btn btn-success">Add</a>
    <a href="/delete-animals/{{this._id}}" class="btn btn-danger">Delete</a>
  </div>
</div>
{{/each}}

{{/block}}

{{/extends}}