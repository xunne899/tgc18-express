{{#extends 'base'}}

{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        {{#each allFood}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.food}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.tags}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}