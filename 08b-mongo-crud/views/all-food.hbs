{{#extends 'base'}}

{{#block "content"}}
<table class="table">
    <a href="/add-food" class = "btn btn-success mt-3">Add</a>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each allFood}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.food}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.tags}}</td>
        
            <td>
                <a href="/food/{{this._id}}/notes" class = "btn btn-secondary btn-sm">Notes</a>
                <a href="/update-food/{{this._id}}" class="btn btn-primary btn-sm">Update</a>
                <a href="/delete-food/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
                </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}