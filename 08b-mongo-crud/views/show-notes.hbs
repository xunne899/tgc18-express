{{#extends 'base'}}

{{#block 'content'}}
<h1>{{foodRecord.food}} <a href="/food/{{foodRecord._id}}/notes/add" class="btn btn-primary">Add New</a></h1>
{{#each foodRecord.notes}}
<div class="card">
    <div class="card-body">
        {{this.content}}
        <div>
            <a href="/food/{{../foodRecord._id}}/{{this._id}}/update" class="btn btn-primary btn-sm">Update</a>
        </div>
    </div>
</div>
{{/each}}
{{/block}}

{{/extends}}