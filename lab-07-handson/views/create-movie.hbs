{{#extends 'base'}}
{{#block 'content'}}
<form method="POST">
    <h1>Add Movie</h1>
    <div>
        <label>Title:</label>
        <input type="text" name="title" class="form-control"/>
    </div>
    <div>
        <label>Plot:</label>
        <textarea class="form-control" name="plot"></textarea>
    </div>
    <input type="Submit" class="mt-3 btn btn-primary"/>
</form>
{{/block}}
{{/extends}}